<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <!--    <ImageView-->
    <!--            android:id="@+id/pdfImage"-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="match_parent"-->
    <!--            android:background="@android:color/white"-->
    <!--            android:contentDescription="@null"-->
    <!--            android:scaleType="fitCenter" />-->
    <TextView
            android:text="Loading"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/topBar"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp"/>
    <Button
            android:text="Back"
            android:layout_width="75dp"
            android:layout_height="39dp" android:id="@+id/backButton"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/undoButton" android:layout_marginStart="-200dp"
            android:onClick="checkgreyedoutbuttons"
            android:layout_marginBottom="5dp"/>
    <Button
            android:text="Next"
            android:layout_width="75dp"
            android:layout_height="39dp" android:id="@+id/nextButton"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/undoButton" android:layout_marginStart="40dp"
            android:layout_marginBottom="5dp" tools:ignore="UsingOnClickInXml"/>
    <Button
            android:text="Move"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:id="@+id/moveButton"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp" app:layout_constraintEnd_toStartOf="@+id/pdfLayout"
            android:layout_marginEnd="-800dp"/>
    <!--            android:background="@drawable/pentool"-->
    android:backgroundTint="#000000"
    android:gravity="left|center_vertical" app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="600dp" app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="5dp" app:iconTint="#2C458F"/>
    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="600dp"/>
    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/pdfLayout" android:layout_marginStart="700dp"/>
    <Button
            android:text="Pen"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:id="@+id/penButton"
            app:layout_constraintEnd_toStartOf="@+id/pdfLayout"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp" android:layout_marginEnd="-390dp"/>
<!--            android:background="@drawable/pentool"-->
            android:backgroundTint="#000000"
            android:gravity="left|center_vertical" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="600dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp" app:iconTint="#2C458F"/>
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="600dp"/>
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/pdfLayout" android:layout_marginStart="700dp"/>
    <Button
            android:text="Highlight"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/HighlighterButton"
            app:layout_constraintEnd_toStartOf="@+id/pdfLayout"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp" android:layout_marginEnd="-550dp"/>
    <!--            android:background="@drawable/pentool"-->
    android:backgroundTint="#000000"
    android:gravity="left|center_vertical" app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="600dp" app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="5dp" app:iconTint="#2C458F"/>
    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="600dp"/>
    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/pdfLayout" android:layout_marginStart="700dp"/>
    <Button
            android:text="Erase"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:id="@+id/EraserButton"
            app:layout_constraintEnd_toStartOf="@+id/pdfLayout"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp" android:layout_marginEnd="-680dp"/>
    <!--            android:background="@drawable/pentool"--><![CDATA[
    android:backgroundTint="#000000"
    android:gravity="left|center_vertical" app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="600dp" app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="5dp" app:iconTint="#2C458F"/>
    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="600dp"/>
    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/pdfLayout" android:layout_marginStart="700dp"/>
    ]]>
    <Button
            android:text="Undo"
            android:layout_width="80dp"
            android:layout_height="40dp" android:id="@+id/undoButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="parent" android:layout_marginEnd="-740dp"
            android:layout_marginBottom="5dp"/>
    <Button
            android:text="Redo"
            android:layout_width="80dp"
            android:layout_height="40dp" android:id="@+id/redoButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="parent" android:layout_marginEnd="-850dp"
            android:layout_marginBottom="5dp"/>
    <LinearLayout
            android:id="@+id/pdfLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="10dp"
            android:layout_marginTop="60dp" app:layout_constraintEnd_toEndOf="parent">
    </LinearLayout>
    <TextView
            android:text="Loading"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/bottomBar"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="7dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>